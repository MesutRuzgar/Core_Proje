@model EntityLayer.Concrete.SocialMedia

@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Sosyal Medya Güncelleme</h4>
            <form class="forms-sample" method="post">

                @Html.HiddenFor(model => model.SocialMediaId)
                @Html.HiddenFor(model => model.Icon)

                <div class="form-group">
                    <label for="exampleInputName1">Platform</label>
                    <input type="text" name="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Url</label>
                    <input type="text" name="Url" class="form-control" value="@Model.Url">
                </div>

                <button type="submit" class="btn btn-success ">Güncelle</button>
                <a href="/SocialMedia" class="btn btn-danger">İptal</a>
            </form>
        </div>
    </div>
</div>

