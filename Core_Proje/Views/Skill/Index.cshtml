@using EntityLayer.Concrete
@model List<Skill>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}







<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Yetenekler</h4>
            <a href="/Skill/AddSkill" class="btn btn-success">Yetenek Ekle</a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>İlerleme</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>

                            <td>@item.Title</td>
                            <td>@item.Value%</td>
                            <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
                            <td><a href="/Skill/EditSkill/@item.SkillId" class="btn btn-warning">Güncelle</a></td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


