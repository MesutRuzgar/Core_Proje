@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Güncelleme</h4>
            <form class="forms-sample" method="post">


                @Html.HiddenFor(model => model.SkillId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" name="Title" class="form-control" value="@Model.Title" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="text" name="Value" class="form-control" value="@Model.Value">
                </div>
                
                

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button href="/Skill" class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>

