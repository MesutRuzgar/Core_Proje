@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0 d-flex align-items-center">
    <h3 class="mb-0 mr-auto">Yetenek Güncelleme Sayfası</h3>
</div>
<br />

<form method="post">
    @Html.HiddenFor(model => model.SkillId) <!-- ID değeri gizli alan olarak eklenir -->
    <div class="form-group">
        <label>Yetenek Adı</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label>İlerleme</label>
        <input type="text" name="Value" class="form-control" value="@Model.Value">
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Skill" class="btn btn-youtube">İptal</a>
</form>

