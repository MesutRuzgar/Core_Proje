
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



@*method kısmı sayfada bir post isteği olduğunda işlemin gerceklesmesini istedigimizi sart kosuyor*@

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekleme</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Yetenek Başlığı</label>
                    <input type="text" class="form-control" name="Title" placeholder="Yetenek Giriniz">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">İlerleme (%)</label>
                    <input type="text" class="form-control" name="Value" placeholder="Örn. 65">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <a   href="/Skill" class="btn btn-dark">İptal</a>
            </form>
          
        </div>
    </div>
</div>