@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0 d-flex align-items-center">
    <h3 class="mb-0 mr-auto">Hizmet Güncelleme Sayfası</h3>
</div>
<br />

<form method="post">
    @Html.HiddenFor(model => model.ServiceId) 
    <div class="form-group">
        <label>Hizmet Adı</label>
        <input type="text" name="Title" class="form-control" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label>Resim Yolu</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl">
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Service" class="btn btn-youtube">İptal</a>
</form>



