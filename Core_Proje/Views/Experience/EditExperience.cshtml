@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0 d-flex align-items-center">
    <h3 class="mb-0 mr-auto">Deneyim Güncelleme</h3>
</div>
<br />

<form method="post">
    @Html.HiddenFor(model => model.ExperienceId)
    <div class="form-group">
        <label>Deneyim</label>
        <input type="text" name="Name" class="form-control" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input type="text" name="Date" class="form-control" value="@Model.Date">
    </div>
    <div class="form-group">
        <label>Resim Yolu</label>
        <input type="text" name="ImageUrl" class="form-control" value="@Model.ImageUrl">
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <input type="text" name="Description" class="form-control" value="@Model.Description">
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="/Experience" class="btn btn-youtube">İptal</a>
</form>
