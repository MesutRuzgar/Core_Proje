@model EntityLayer.Concrete.Experience

@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyim Güncelleme</h4>
            <form class="forms-sample" method="post">


                @Html.HiddenFor(model => model.ExperienceId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    <input type="text" class="form-control" name="Date" value="@Model.Date">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Resim Yolu</label>
                    <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Açıklama</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description">

                </div>

                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
                <button href="/Experience" class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>





