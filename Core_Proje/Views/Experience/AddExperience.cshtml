
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0 d-flex align-items-center">
    <h3 class="mb-0 mr-auto">Deneyim Ekleme Sayfası</h3>
</div>
<br />
<form method="post">
    <div class="form-group">
        <label>Deneyim Başlığı</label>
        <input type="text" name="Name" class="form-control" placeholder="Deneyim Adı Giriniz" />
    </div>
    <div class="form-group">
        <label>Tarih</label>
        <input type="text" name="Date" class="form-control" placeholder="Örn. Veri Tabanı (2021-2023)">
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a href="/Experience" class="btn btn-youtube">İptal</a>
</form>

