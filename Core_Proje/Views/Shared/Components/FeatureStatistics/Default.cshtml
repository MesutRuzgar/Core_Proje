
<div class="container-fluid">
    <div class="row">
        <!-- İstatistik Kartları - 1. Satır -->
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <!-- Kart 2 -->
            <div class="card">
                <!-- Kart içeriği -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.c2</h3>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-danger">
                                <span class="mdi mdi-email"></span>
                            </div>
                        </div>
                    </div>
                    @if (ViewBag.c2 > 0)
                    {
                        <div onclick="toggleUnreadMessages()">
                            <h6 class="text-muted font-weight-normal" id="toggleUnreadMessages">Toplam Okunmamış Mesaj Sayısı</h6>
                        </div>
                        <div>
                            <ul class="unread-messages-list" id="unreadMessagesList" style="display: none;">
                                <li > <a href="/Contact"> Sayfadan gelen okunmamış mesaj : @ViewBag.y</a></li>
                                <li > <a href="/AdminMessage/ReceiverMessageList"> Yazarlardan gelen okunmamış mesaj : @ViewBag.y1</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <h6 class="text-muted font-weight-normal" id="toggleUnreadMessages">Toplam Okunmamış Mesaj Sayısı</h6>
                    }

                </div>
                </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <!-- Kart 3 -->
            <div class="card">
                <!-- Kart içeriği -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.c3</h3>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <span class="mdi mdi-email-open"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Toplam Okunmuş Mesaj Sayısı</h6>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <!-- Kart 1 -->
            <div class="card">
                <!-- Kart içeriği -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.c1</h3>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <span class="mdi mdi-laptop-chromebook"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Yetenek Sayısı</h6>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <!-- Kart 4 -->
            <div class="card">
                <!-- Kart içeriği -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@ViewBag.c4</h3>

                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <span class="mdi mdi-sort-ascending"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Deneyim Sayısı</h6>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function toggleUnreadMessages() {
        var messageList = document.getElementById("unreadMessagesList");
        if (messageList.style.display === "none" || messageList.style.display === "") {
            messageList.style.display = "block";
        } else {
            messageList.style.display = "none";
        }
    }
</script>