@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Projelerim</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th> Platform </th>
                                <th> Proje Adı </th>
                                <th> Fiyat </th>
                                <th> İlerleme </th>
                                <th >Durum</th>
                                <th> URL </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    <img src=@item.Platform alt="image" />
                                </td>
                                <td> <span class="pl-2">@item.Name</span></td>
                                <td> @item.Price</td>
                                <td> @item.Value% </td>
                                <td>
                                    <div class="@(item.Status ? "badge badge-outline-success" : "badge badge-outline-danger")">
                                        @(item.Status ? "Tamamlandı" : "Devam Ediyor")
                                    </div>
                                </td>

                                <td> @item.ProjectUrl </td>
                                <td> <a href="/Portfolio/EditPortfolio/@item.PortfolioId"> <div class="btn btn-warning"> Detayları Gör</div></a> </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>