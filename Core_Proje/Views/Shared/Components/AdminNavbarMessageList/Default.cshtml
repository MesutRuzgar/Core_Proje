@model List<Core_Proje.Models.UserMessageViewModel>

<li class="nav-item dropdown border-left">
    <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
        <i class="mdi mdi-email"></i>
        <span class="count bg-success"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
        <h6 class="p-3 mb-0">Son Mesajlar</h6>
        <div class="dropdown-divider"></div>
        @foreach (var item in Model)
        {
            <a class="dropdown-item preview-item" href="/AdminMessage/ReceiverMessageDetails/@item.WriterMessageId">
                <div class="preview-thumbnail">
                    @if (item.ImageUrl == null)
                    {
                         <img src="/userimage/default.png" alt="image" class="rounded-circle profile-pic"> 
                    }
                     else
                    {
                          <img src="/userimage/@item.ImageUrl" alt="image" class="rounded-circle profile-pic">
                    }

                </div>
                <div class="preview-item-content">
                    <p class="preview-subject ellipsis mb-1">"@item.SenderName" bir mesaj gönderdi </p>
                    <br />
                    <p class="text-muted ellipsis mb-0"> @item.MessageContent </p> 
                    <br />
                    <p class="text-muted mb-0"> @(((DateTime)item.Date).ToString("dd-MMM-yyyy")) </p>
                </div>
            </a>
        }


        <div class="dropdown-divider"></div>
        <a href="/AdminMessage/ReceiverMessageList"><p class="p-3 mb-0 text-center">Gelen Kutusu</p> </a>
    </div>
</li>