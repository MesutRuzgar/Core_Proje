@model Core_Proje.Models.UserMessageViewModel

@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<html lang="en">

<head>
    <style>
        .table {
            table-layout: fixed;
        }

            .table td {
                overflow: hidden;
                white-space: normal;
                word-wrap: break-word;
                color: white;
            }

        table, th, td {
            border: 2px solid antiquewhite;
        }
        
    </style>
</head>

<body>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayı</h4>
                <div class="table-responsive">
                    <table border="1" bordercolordark="blue" class="table">
                        <tr>
                            <td style="width:120px !important;"><strong>Alıcı :</strong></td>
                            <td colspan="6">
                                <div style="display: flex; align-items: center;">                     
                                @if (Model.ImageUrl == null)
                                {
                                    <img src="/userimage/default.png" style="width:40px; height:40px;" alt="image" class="rounded-circle profile-pic">
                                }
                                else
                                {
                                    <img src="/userimage/@Model.ImageUrl" style="width:40px; height:40px;" alt="image" class="rounded-circle profile-pic">
                                }
                         
                            
                            <span style="margin-left: 10px;"><strong>@Model.ReceiverName</strong></span>
                            <span style="margin-left: 10px;">[@Model.Receiver]</span>
                                </div>
                            </td>

                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Konu :</strong></td>
                            <td colspan="6">@Model.Subject</td>
                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Tarih :</strong></td>
                            <td colspan="6">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</td>

                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Mesaj :</strong></td>
                            <td colspan="6">@Model.MessageContent</td>
                        </tr>
                    </table>
                    <br />
                    <div class="col-md-12" style="text-align: right;">
                        <a href="/AdminMessage/SenderMessageList" class="btn btn-danger">Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>
