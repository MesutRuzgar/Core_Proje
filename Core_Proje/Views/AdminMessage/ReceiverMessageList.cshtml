@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "ReceiverMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h4 class="card-title mb-0">Gelen Kutusu</h4>
                <a href="/AdminMessage/AdminMessageSend" class="btn btn-success">Mesaj Gönder</a>
            </div>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.SenderName</td>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><a href="/AdminMessage/ReceiverMessageDetails/@item.WriterMessageId" class="btn btn-outline-primary">Mesajı Gör</a></td>
                                <td><a href="/AdminMessage/DeleteMessage/@item.WriterMessageId" class="btn btn-outline-danger">Mesajı Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

