@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "SenderMessageList";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>

                            <th>Alıcı</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>@item.ReceiverName</td>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>

                                <td><a href="/AdminMessage/SenderMessageDetails/@item.WriterMessageId" class="btn btn-outline-primary">Mesajı Gör</a></td>
                                <td><a href="/AdminMessage/DeleteMessage/@item.WriterMessageId" class="btn btn-outline-danger">Mesajı Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

