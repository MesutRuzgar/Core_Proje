@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "ReceiverMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .table {
            table-layout: fixed;
        }

            .table td {
                overflow: hidden;
                white-space: pre-wrap;
                word-wrap: break-word;
                color: white;
            }
        table, th, td {
            border: 2px solid antiquewhite;
        }
      
    </style>
</head>

<body>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayı</h4>
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <td  style="width:120px !important;"><strong>Gönderen :</strong></td>
                            <td  colspan="6"><strong >@Model.SenderName</strong> [ @Model.Sender ]</td>

                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Konu :</strong></td>
                            <td colspan="6">@Model.Subject</td>
                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Tarih :</strong></td>
                            <td colspan="6">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</td>

                        </tr>
                        <tr>
                            <td style="width:120px !important;"><strong>Mesaj :</strong></td>
                            <td colspan="6" >@Model.MessageContent</td>
                        </tr>
                    </table>
                    <br />
                    <div class="col-md-12" style="text-align: right;">
                        <a href="/AdminMessage/ReceiverMessageList" class="btn btn-danger">Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>



