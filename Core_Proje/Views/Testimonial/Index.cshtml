@using EntityLayer.Concrete
@model List<Testimonial>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="card-title mb-0">Referans Listesi</h4>
                    <a href="/Testimonial/AddTestimonial" class="btn btn-success">Referans Ekle</a>
                </div>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Görsel </th>
                                <th> Ad Soyad </th>
                                <th> Şirket </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="/testimonialimage/@item.ImageUrl" alt="image" style="width:50px; height:50px;"/>
                                    </td>
                                    <td>  <span class="pl-2">@item.ClientName</span></td>
                                    <td> @item.Company </td>
                                    <td> <a href="/Testimonial/EditTestimonial/@item.TestimonialId" class="btn btn-warning">Detaylar</a>  </td>

                                    <td> <a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-danger">Sil</a> </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

