@using EntityLayer.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Projelerim</h4>
            <a href="/Portfolio/AddPortfolio" class="btn btn-success">Proje Ekle</a>
        </div>

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Proje</th>
                        <th>Ücret</th>
                        <th>Durum</th>
                        <th>İlerleme</th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                    <tr>

                        <td scope="row">
                            <div class="media align-items-center">
                                <a  class="avatar rounded-circle mr-3">
                                    <img alt="Image placeholder" src="@item.Platform">
                                </a>
                                <div class="media-body">
                                    <span class="name mb-0 text-sm">@item.Name</span>
                                </div>
                            </div>
                        </td>
                        <td>@item.Price</td>

                        <td>
                            <div class="@(item.Status ? "badge badge-outline-success" : "badge badge-outline-danger")">
                                @(item.Status ? "Tamamlandı" : "Devam Ediyor")
                            </div>
                        </td>

                        <td>@item.Value%</td>
                        <td> <a href="/Portfolio/EditPortfolio/@item.PortfolioId" class="btn btn-warning">Güncelle</a></td>
                        <td> <a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-youtube">Sil</a></td>

                    </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


