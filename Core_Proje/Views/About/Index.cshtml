@model Core_Proje.Models.AboutEditViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Düzenleme Sayfası</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">


                @Html.HiddenFor(model => model.AboutId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" name="Title" class="form-control" value="@Model.Title" />
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Açıklama</label>

                    <textarea name="Description" class="form-control" style="height: 90px;">@Model.Description</textarea>

                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Yaş</label>
                    <input type="text" name="Age" class="form-control" value="@Model.Age">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Mail</label>
                    <input type="text" name="Mail" class="form-control" value="@Model.Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Telefon</label>
                    <input type="text" name="Phone" class="form-control" value="@Model.Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Adres</label>
                    <input type="text" name="Address" class="form-control" value="@Model.Address">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim</label>
                    <br />
                    <input type="file" name="Picture">
                </div>



                <button type="submit" class="btn btn-warning mr-2">Güncelle</button>
                <a href="/Dashboard/Index" class="btn btn-danger">İptal</a>
            </form>
        </div>
    </div>
</div>

