@model Core_Proje.Areas.Writer.Models.UserRegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>Bir hesabın yok mu?</h4>
                            <h6 class="font-weight-light">Hemen sisteme kayıt yaptırabilirsin</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>Adınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="Name" placeholder="Ad">
                                </div>
                                <div class="form-group">
                                    <label>Soyadınız</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="Surname" placeholder="Soyad">
                                </div>
                                <div class="form-group">
                                    <label>Kullanıcı Adınız</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="UserName" placeholder="Kullanıcı Adınız ">
                                </div>
                                <div class="form-group">
                                    <label>Görsel</label>
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="ImageUrl">
                                </div>
                                <div class="form-group">
                                    <label>Şifreniz</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="Password">
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                                <div class="form-group">
                                    <label>Şifre Tekrar</label>
                                    <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
                                    <input type="password" class="form-control form-control-lg" asp-for="ConfrimPassword">
                                </div>
                                <div class="form-group">
                                    <label>Mail Adresiniz</label>
                                    <span asp-validation-for="Mail" class="text-danger"></span>
                                    <input type="text" class="form-control form-control-lg" asp-for="Mail">
                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Kayıt Ol</button>
                                    <div class="text-center mt-4 font-weight-light">
                                        Bir hesabın var mı? <a href="/Writer/Login/Index/" class="text-primary">Giriş Yap</a>
                                    </div>
                                </div>
                                @*<div class="text-center mt-4 font-weight-light">
            Already have an account? <a href="login.html" class="text-primary">Login</a>
        </div>*@
                            </form>
                    </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
</body>

</html>
