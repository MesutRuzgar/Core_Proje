@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "SenderMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        .table {
            table-layout: fixed;
        }

            .table td {
                overflow: hidden;
                white-space: pre-wrap;
                word-wrap: break-word;
            }
    </style>
</head>

<body>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Mesaj Detayı</h4>
                <div class="table-responsive">
                    <table border="1" bordercolordark="blue" class="table">
                        <tr>
                            <td><strong>Alıcı :</strong></td>
                            <td colspan="3"><strong>@Model.ReceiverName</strong> [ @Model.Receiver ]</td>

                        </tr>
                        <tr>
                            <td><strong>Konu :</strong></td>
                            <td colspan="3">@Model.Subject</td>
                        </tr>
                        <tr>
                            <td><strong>Tarih :</strong></td>
                            <td colspan="3">@(((DateTime)Model.Date).ToString("dd-MMM-yyyy"))</td>

                        </tr>
                        <tr>
                            <td><strong>Mesaj :</strong></td>
                            <td colspan="3">@Model.MessageContent</td>
                        </tr>
                    </table>
                    <br />
                    <div class="col-md-12" style="text-align: right;">
                        <a href="/Writer/Message/SenderMessage" class="btn btn-danger">Geri</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>



