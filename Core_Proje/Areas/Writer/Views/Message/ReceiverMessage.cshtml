@using EntityLayer.Concrete
@model List<WriterMessage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                           
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Gönderen</th>
                            <th>Durum</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                          

                        <tr>

                            <td>@item.Subject</td>
                            <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                            <td>@item.SenderName</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <div class="badge badge-outline-success"> Okundu </div>
                                }
                                else
                                {
                                    <div class="badge badge-outline-danger"> Okunmadı </div>
                                }

                            </td>
                            <td><a href="/Writer/Message/ReceiverMessageDetails/@item.WriterMessageId" class="btn btn-primary">Mesajı Gör</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

